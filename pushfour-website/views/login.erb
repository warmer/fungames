    <h3>
      Log in to your Pushfour account
    </h3>
    <div>
      If you don't have an account yet, please <a href="<%= url(:register) %>">register</a>!
    </div>
    <br />
    <form method="post" action="<%= url(:login) %>">
      <div class="form-group">
        <label for="name" class="control-label">User Name</label>
        <input type="text" class="form-control" rows="1"
              aria-label="Name" name="name" id="name" value="<%= '' %>" />
      </div>
      <div class="form-group">
        <label for="password" class="control-label">Password</label>
        <input type="password" class="form-control" rows="1"
              aria-label="Password" name="password" id="password" value="<%= '' %>" />
      </div>

      <button type="submit" class="btn" name="submit">Login</button>
    </form>
