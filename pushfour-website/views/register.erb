    <h3>
      Register a Pushfour account
    </h3>
    <br />
    <form method="post" action="<%= url(:register) %>" class="form-horizontal">
      <div class="form-group">
        <label for="name" class="control-label">User Name</label>
        <input type="text" class="form-control" rows="1"
            aria-label="Name" name="name" id="name" value="<%= defined?(name) ? name : '' %>" />
      </div>

      <div class="form-group">
        <label for="password" class="control-label">Password</label>
        <input type="password" class="form-control" rows="1"
            aria-label="Password" name="password" id="password" value="<%= '' %>" />
      </div>

      <div class="form-group">
        <label for="password2" class="control-label">Password (again)</label>
        <input type="password" class="form-control" rows="1"
            aria-label="Password" name="password2" id="password2" value="<%= '' %>" />
      </div>

      <button type="submit" class="btn" name="submit">Register</button>
    </form>

