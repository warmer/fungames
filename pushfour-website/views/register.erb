<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Register
    </h3></div>
  <div class="panel-body" id="edit-panel">
    <form method="post" action="<%= url['register'] %>" class="form-horizontal">
        <div class="form-group">
          <label for="name" class="col-sm-3 control-label">Name</label>
          <div class="col-sm-3">
            <input type="text" class="form-control" rows="1"
              aria-label="Name" name="name" id="name" value="<%= '' %>" />
          </div>
        </div>

        <div class="form-group">
          <label for="password" class="col-sm-3 control-label">Password</label>
          <div class="col-sm-3">
            <input type="password" class="form-control" rows="1"
              aria-label="Password" name="password" id="password" value="<%= '' %>" />
          </div>
        </div>

        <div class="form-group">
          <label for="password2" class="col-sm-3 control-label">Password (again)</label>
          <div class="col-sm-3">
            <input type="password" class="form-control" rows="1"
              aria-label="Password" name="password2" id="password2" value="<%= '' %>" />
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-6">
            <button type="submit" class="btn btn-success btn-block" name="submit">Register</button>
          </div>
        </div>
    </form>
  </div>
</div>

